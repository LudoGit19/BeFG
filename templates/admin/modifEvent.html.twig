{% extends 'base.html.twig' %}

{% block title %}Modification d'un évènement{% endblock %}
{% block monTitre %}{{ event.name }}{% endblock %}

{% block body %}
{% include "header2.html.twig" %}

<div class="jumbotron bg-dark">
    <h1 class="text-center text-info">Modifier un Evènement</h1>
</div>

<div id="page-content-wrapper">
    <div class="container-fluid">
        <div id="modifPlayerForm" class="mt-4 text-info"></div>
        {{form_start(formEvent)}}
            <div class="row">
                <div class="col-6 p-4 m-auto">
                    {{form_widget(formEvent)}}
                    <a href="#" class="btn btn-primary">Retour</a>
                    <input type="submit" value="Valider" class="btn btn-success">
                </div>
            </div>
        {{form_end(formEvent)}}
    </div>
</div>    
       
{% endblock %}
