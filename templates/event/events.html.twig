{% extends 'base.html.twig' %}

{% block title %}Events{% endblock %}

{% block monTitre %}Liste des évènements{% endblock %}
{% block body %}
{% include "header3.html.twig" %} 



    <div class="container">    
        {% for message in app.flashes('success') %}
            <div class="alert alert-success">
                {{message}}
            </div>
        {% endfor %}

<div class="d-flex" id="wrapper">
    <div id="page-content-wrapper">
        <div class="container-fluid"> 
            <p>Tapez quelque chose dans le champ de saisie pour rechercher dans le tableau par date</p>  
            <input id="myInput" type="text" placeholder="Search..">
            <br><br>    
            <table class="table table-hover">
                <thead class="thead-light">
                                
                        <a href="#" class="btn btn-success btn-xs pull-left p-4 m-4"><i class="fa fa-calendar fa-lg"></i>  +</a>

                    <tr>
                        <th></th>
                        <th>Date</th>
                        <th>Evènements</th>
                        {# <th>Lieu</th>                    #}
                        <th class="text-center">Action</th>
                    </tr>
                </thead>
                <tbody id="myTable">
                    {%  for event in events %}
                        <tr>
                            <td>
                                <div class="ckbox">
                                    <input type="checkbox" id="checkbox1">
                                    <label for="checkbox1"></label>
                                </div>
                            </td>
                            
                            <td><a href="#"><strong>{{ event.DateCreated|date("m/d/Y") }}</strong></a></td>
                            <td>{{ event.name }}</td>
                        
                            <!-- <td>{{ event.name }}</td> -->
                            <td>
                                <div class="row">
                                    <!-- <a class='btn btn-info btn-xs m-1' href="#"><span class="glyphicon glyphicon-edit"></span>Edit</a>  -->
                                
                                    <form method="POST" action="#" onsubmit="return confirm('êtes-vous sûr de confirmer la suppression ?')">              
                                        <input type="hidden" name="_method" value="delete"> 
                                        <input type="hidden" name="_token" value="#"> 
                                        <button>
                                            <i class="fa fa-trash fa-lg"></i>
                                        </button>
                                    </form>
                                </div>
                            </td>
                    
                        </tr>
                    {% endfor %} 
                </tbody>     
            </table>
        </div>
    </div>
</div>    

               
            

{% endblock %}
